<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/logo_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:id="@+id/list_store_name"
        android:layout_toEndOf="@+id/logo_thumbnail"
        android:layout_toRightOf="@+id/logo_thumbnail"
        android:layout_alignTop="@+id/list_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locate Store"
        android:id="@+id/list_button"
        android:layout_alignBottom="@+id/logo_thumbnail"
        android:layout_toEndOf="@+id/list_store_name"
        android:layout_toRightOf="@+id/list_store_name"
        android:layout_marginStart="151dp"
        android:layout_marginLeft="151dp"
        />
    android:layout_alignParentStart="true"/>









</RelativeLayout>