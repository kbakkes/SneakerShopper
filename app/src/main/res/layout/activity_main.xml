<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sneakershopper.karim.sneakershopper.MainActivity">

    <Button
        android:id="@+id/button_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maps"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="503dp"
        android:layout_marginStart="148dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="124dp"
        android:layout_height="86dp"
        app:srcCompat="@drawable/icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="264dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="264dp" />

    <TextView
        android:id="@+id/home_title"
        android:layout_width="290dp"
        android:layout_height="172dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="27dp"
        android:fontFamily="sans-serif"
        android:text="Sneaker Shopper"
        android:textAlignment="center"
        android:textColor="@color/rotterdamGreen"
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="37dp" />

    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="215dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="54dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_title">

        <Button
            android:id="@+id/stores_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/find" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="button_settings"
            android:text="@string/settings" />

        <Button
            android:id="@+id/quit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quit" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
